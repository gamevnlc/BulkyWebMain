@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3"></div>
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="py-2">Delete Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden/>
            <div class="border p-3 mt-4">
                @* <div class="row pb-2"> *@
                @*     <h2 class="text-primary"> *@
                @*         Delete Category *@
                @*     </h2> *@
                @* </div> *@
                @* <div asp-validation-summary="All"></div> *@
                <div asp-validation-summary="ModelOnly"></div>
                @* <div asp-validation-summary="None"></div> *@
                <div class="mb-3">
                    <input asp-for="Name" disabled class="form-control">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="DisplayOrder" disabled class="form-control">
                    <label asp-for="DisplayOrder"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>